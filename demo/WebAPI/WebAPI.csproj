<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <GenerateDocumentationFile>True</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Http" Version="2.3.9" />
        <PackageReference Include="Microsoft.AspNetCore.Http.Extensions" Version="2.3.9" />
        <PackageReference Include="Microsoft.Data.Sqlite" Version="10.0.3" />
        <PackageReference Include="morelinq" Version="4.4.0" />
        <PackageReference Include="NeoSmart.Caching.Sqlite" Version="9.0.1" />
        <PackageReference Include="NLog" Version="6.0.6" />
        <PackageReference Include="NLog.Web.AspNetCore" Version="6.1.0" />
        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2"/>
        <PackageReference Include="ZiggyCreatures.FusionCache" Version="2.5.0" />
        <PackageReference Include="ZiggyCreatures.FusionCache.Serialization.SystemTextJson" Version="2.5.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\CrossCutting\CrossCutting.csproj" />
      <ProjectReference Include="..\Application\Application.csproj" />
      <ProjectReference Include="..\Infrastructure\Infrastructure.csproj" />
      <ProjectReference Include="..\JoshAuthorization\JoshAuthorization.csproj" />
      <ProjectReference Include="..\JoshFileCache\JoshFileCache.csproj" />
    </ItemGroup>

    <ItemGroup>
      <None Update="Swagger\docs\Description.md">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
        <!-- Include all files from your Web folder -->
        <Content Include="WebPage\**\*.*">
            <!-- Always copy them to output -->
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>
    
    <ItemGroup>
        <Folder Include="Attributes\" />
        <Folder Include="Properties\PublishProfiles\" />
        <Folder Include="WebPage\v1\" />
        <Folder Include="WebPage\v2\" />
        <Folder Include="WebPage\v3\" />
    </ItemGroup>

    <Target Name="InjectVersionInfo" BeforeTargets="BeforeBuild">
        <!-- Try to get Git SHA -->
        <Exec Command="git log -1 --pretty=format:%H > $(SolutionDir)version.info"
              WorkingDirectory="$(SolutionDir)"
              IgnoreExitCode="true"
              ContinueOnError="true" />

        <!-- Read file if it exists -->
        <ReadLinesFromFile File="$(SolutionDir)version.info">
            <Output TaskParameter="Lines" PropertyName="VersionCode" />
        </ReadLinesFromFile>

        <!-- Fallback: write timestamp into version.info if VersionInfo is empty -->
        <PropertyGroup>
            <UnixTimestamp>$([System.DateTimeOffset]::UtcNow.ToUnixTimeMilliseconds())</UnixTimestamp>
        </PropertyGroup>
        <WriteLinesToFile
                Condition="'$(VersionCode)' == ''"
                File="$(SolutionDir)version.info"
                Lines="$(UnixTimestamp)"
                Overwrite="true" />
    </Target>

    <ItemGroup>
        <None Include="$(SolutionDir)version.info" CopyToOutputDirectory="Always" />
    </ItemGroup>

</Project>
